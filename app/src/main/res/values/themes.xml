<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdriProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Theme by Adrian Blasco -->
    <style name="PrincipalTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightcoral</item>
        <item name="colorPrimaryVariant">@color/indianred</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/gradient_button</item>
    </style>


    <!-- Style by Adrian Blasco -->
    <style name="gradient_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="WhiteInput" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/lightcoral</item>
        <item name="colorAccent">@color/indianred</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
    </style>

    <style name="appStyleFont">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="appStyleButtonFont">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="backgroundColor">@color/transparent</item>
    </style>





</resources>